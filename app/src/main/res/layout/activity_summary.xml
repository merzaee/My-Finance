<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".Summary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/contact_count" />

        <EditText
            android:id="@+id/et_summary_contact_count"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_edit_text"
            android:hint="@string/contact_count"
            android:paddingHorizontal="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/total_listed" />

        <EditText
            android:id="@+id/et_summary_total_listed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_edit_text"
            android:hint="@string/total_listed"
            android:inputType="none"
            android:paddingHorizontal="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/contact_total_payment" />

        <EditText
            android:id="@+id/et_summary_total_payment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_edit_text"
            android:hint="@string/contact_total_payment"
            android:paddingHorizontal="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/total_reminder" />

        <EditText
            android:id="@+id/et_summary_reminder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_edit_text"
            android:hint="@string/total_reminder"
            android:paddingHorizontal="10dp" />

    </LinearLayout>
</ScrollView>